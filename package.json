{
  "name": "homebridge-comelit-icona",
  "version": "1.2.0",
  "author": "Pierpaolo Follia",
  "repository": {
    "type": "git",
    "url": "https://github.com/madchicken/homebridge-comelit-icona"
  },
  "description": "Comelit ICONA support for Homebridge: https://github.com/nfarina/homebridge",
  "license": "Apache-2.0",
  "keywords": [
    "homebridge-plugin",
    "comelit",
    "icona"
  ],
  "engines": {
    "node": ">12.13.0",
    "homebridge": ">=1.1.0"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "config.schema.json"
  ],
  "scripts": {
    "build": "yarn clean && yarn build:ts && yarn lint",
    "test": "jest --forceExit --coverage --verbose",
    "watch:test": "yarn run test -- --watchAll",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "lint": "eslint \"src/*.{js,ts}\" --quiet --fix",
    "prettier": "prettier --single-quote --trailing-comma es5 --write \"{src,__{tests,mocks}__}/**/*.ts\"",
    "clean": "rimraf dist/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "comelit-client": "2.5.4-rc.0",
    "lodash": "4.17.21",
    "typescript": "4.6.2"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.162",
    "@types/node": "^11.15.3",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "homebridge": "1.4.0",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4"
  }
}
